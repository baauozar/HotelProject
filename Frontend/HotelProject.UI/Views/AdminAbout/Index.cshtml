@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int counter = 0;
  
}



<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title 1</th>
        <th>Title 2</th>
        <th>Content</th>
        <th>Update</th>
       
    </tr>
    @foreach (var item in Model)
    {
        counter++;
        <tr>
            <td>@counter</td>
            <td>@item.Title1</td>
            <td>@item.Title2</td>
            <td>@item.Content</td>
        
            <td>
                <a asp-action="UpdateAbout" asp-controller="AdminAbout" asp-route-id="@item.AboutId" class="btn mb-1 btn-rounded  btn-outline-success">Update</a>
            </td>
        
        </tr>
        
    }

</table>

