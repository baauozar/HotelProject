@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();
}

<div class="mail-list mt-4">
    <a href="/AdminContact/Inbox/"
       class="list-group-item border-0 p-r-0 @(controller == "AdminContact" && action == "Inbox" ? "active" : "")">
        <i class="fa fa-inbox font-18 align-middle mr-2"></i>
        <b>Inbox</b>
        <span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.ContactCount</span>
    </a>

    <a href="/AdminContact/SendBox/"
       class="list-group-item border-0 p-r-0 @(controller == "AdminContact" && action == "SendBox" ? "active" : "")">
        <i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Sent
    </a>

    <a href="#"
       class="list-group-item border-0 p-r-0">
        <i class="fa-regular fa-star mr-2"></i>Important
        <span class="badge badge-danger badge-sm float-right m-t-5">50</span>
    </a>

    <a href="#"
       class="list-group-item border-0 p-r-0">
        <i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Draft
    </a>

    <a href="#"
       class="list-group-item border-0 p-r-0">
        <i class="fa fa-trash font-18 align-middle mr-2"></i>Trash
    </a>
</div>
