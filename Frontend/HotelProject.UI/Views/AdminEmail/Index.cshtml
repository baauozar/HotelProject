@model HotelProject.UI.Model.Email.AdminEmailViewModal
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h2>Send Email</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Index" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ReceiverEmail">Recipient Email</label>
        <input asp-for="ReceiverEmail" class="form-control" />
        <span asp-validation-for="ReceiverEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Subject">Subject</label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Body">Message</label>
        <textarea asp-for="Body" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Send Email</button>
</form>
