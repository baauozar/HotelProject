@model List<ResultAppUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<!-- Add to your HTML head section -->

<div class="col-log-12">
    <div class="active-member">
        <div class="table-responsive">


            <table class="table table-xs mb-0">
                <thead>
                    <tr>

                        <th>User</th>
                        <th>City</th>
                        <th>Country</th>
                        <th>Work Location Name</th>
                        <th>Work Location City</th>
                        <th>Status</th>
                        <th>Gender</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                            <td>@item.City</td>
                            <td>
                                <span>@item.Country</span>
                            </td>
                            <td>
                                <span>@item.WorkLocation?.WorkLocationName</span>
                            </td>
                            <td>
                                <span>@item.WorkLocation?.WorkLocationCity</span>
                            </td>

                            <td>

                                <div>
                                    <div class="progress" style="height: 6px">
                                        <div class="progress-bar bg-success" style="width: 50%"></div>
                                    </div>
                                </div>
                            </td>
                            @if (item.Gender == "Man")
                            {
                                
                                <td> <i class="fa fa-circle-o text-success  mr-2"></i> Man</td>
                            }
                            @if (item.Gender == "Woman")
                            {
                                <td> <i class="fa fa-circle-o text-warning  mr-2"></i> Woman</td>
                            }

                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />
<a href="/Register/Index/" class="btn btn-primary"> Add New User </a>

