@model List<ResultWorkLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Location Name</th>
            <th>Location City</th>
            <th>Delete</th>
            <th>Update</th>
        
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.WorkLocationID</td>
                <td>@item.WorkLocationName</td>
                <td>@item.WorkLocationCity</td>
              
                <td>
                    <a asp-action="EditeWorkLocation" asp-route-id="@item.WorkLocationID" class="btn mb-1 btn-rounded btn-outline-success">Edit</a>
                    
                </td>
                <td>
                    <a asp-action="DeleteWorkLocation" asp-route-id="@item.WorkLocationID" class="btn mb-1 btn-rounded btn-outline-danger">Delete</a>
                    
                </td>
            </tr>
        }
    </tbody>
    
</table>    
<a asp-action="CreateWorkLocation" class="btn mb-1 btn-rounded btn-outline-primary">Add New Location</a>
