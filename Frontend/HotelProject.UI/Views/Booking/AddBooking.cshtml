@model CreateBookingDto
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Reservation Panel</h6>
            <h1 class="mb-5">Book Your Room <span class="text-primary text-uppercase">Now</span></h1>
        </div>
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="/hotelier-1.0.0/hotelier-1.0.0/img/about-1.jpg" style="margin-top: 25%;">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s" src="/hotelier-1.0.0/hotelier-1.0.0/img/about-2.jpg">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s" src="/hotelier-1.0.0/hotelier-1.0.0/img/about-3.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s" src="/hotelier-1.0.0/hotelier-1.0.0/img/about-4.jpg">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form method="post" asp-action="AddBooking" asp-controller="Booking" id="bookingForm">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for="Name" placeholder="Name Surname">
                                    <label asp-for="Name">Name Surname</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" asp-for="Mail" placeholder="Your email">
                                    <label asp-for="Mail">Your email</label>
                                    <span asp-validation-for="Mail" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="date" class="form-control" asp-for="Checkin" placeholder="Check-in">
                                    <label asp-for="Checkin">Check-in</label>
                                    <span asp-validation-for="Checkin" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="date" class="form-control" asp-for="CheckOut" placeholder="Check-out">
                                    <label asp-for="CheckOut">Check-out</label>
                                    <span asp-validation-for="CheckOut" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select" asp-for="AdultCount">
                                        <option value="">Select Adults</option>
                                        <option value="1">Adult 1</option>
                                        <option value="2">Adult 2</option>
                                        <option value="3">Adult 3</option>
                                    </select>
                                    <label asp-for="AdultCount">Adult Count</label>
                                    <span asp-validation-for="AdultCount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select" asp-for="ChildCount">
                                        <option value="0">Child 0</option>
                                        <option value="1">Child 1</option>
                                        <option value="2">Child 2</option>
                                        <option value="3">Child 3</option>
                                    </select>
                                    <label asp-for="ChildCount">Child Count</label>
                                    <span asp-validation-for="ChildCount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <select class="form-select" asp-for="RoomCount">
                                        <option value="">Select Rooms</option>
                                        <option value="1">Room 1</option>
                                        <option value="2">Room 2</option>
                                        <option value="3">Room 3</option>
                                    </select>
                                    <label asp-for="RoomCount">Room Count</label>
                                    <span asp-validation-for="RoomCount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Special Request" asp-for="SpecialRequest" style="height: 100px"></textarea>
                                    <label asp-for="SpecialRequest">Special Request</label>
                                    <span asp-validation-for="SpecialRequest" class="text-danger"></span>
                                </div>
                            </div>

                            @* Hidden field for Description if needed *@
                            <input type="hidden" asp-for="Descripstion" value="nothing" />

                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Make a reservation</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
