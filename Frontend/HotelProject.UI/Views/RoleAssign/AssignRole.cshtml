@model List<HotelProject.UI.Model.RoleAssign.RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>AssignRole</h1>

<form method="post">

    <input type="hidden" name="userId" value="@ViewData["UserId"]" />

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class=" form-check
    ">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input" />
            <label asp-for="@Model[i].Exists" class="form-check-label">@Model[i].RoleName</label>

        </div>
    }

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
