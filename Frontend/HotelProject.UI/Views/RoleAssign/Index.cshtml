@model List<HotelProject.DataAccessLayer.EntityFramework.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-log-12">
    <div class="active-member">
        <div class="table-responsive">


            <table class="table table-xs mb-0">
                <thead>
                    <tr>

                        <th>User</th>
                        <th>Role Assign </th>
               
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                         
                            <td>
                                <a asp-action="AssignRole" asp-route-id="@item.Id" class="btn mb-1 btn-rounded btn-outline-info">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

