@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personal adi</th>
        <th>Personal Unvan</th>
        <th>Sil</th>
        <th>Guncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.StaffID</td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>
                <a asp-action="DeleteStaff" asp-controller="Staff" asp-route-id="@item.StaffID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a>
            </td>
            <td>
                <a asp-action="EditStaff" asp-controller="Staff" asp-route-id="@item.StaffID" class="btn mb-1 btn-rounded  btn-outline-primary">Guncelle</a>
            </td>
            <td>
                <a asp-action="Details" asp-controller="Staff" asp-route-id="@item.StaffID" class="btn mb-1 btn-rounded btn-outline-info">Detaylar</a>
            </td>
        </tr>
    }

</table>

<a href="/staff/CreateStaff"class="btn btn-info">Yeni Personal Grisi</a>